{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["prettier", "import", "simple-import-sort"],
  "rules": {
    "prettier/prettier": "warn",
    "no-console": "warn",
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error"
  },
  "settings": {
    "import/resolver": {
      "typescript": {},
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "env": {
    "browser": true,
    "amd": true,
    "node": true
  }
}
